<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.helloandroid1.MainActivity">
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/uda"/>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="300dp"
        android:text="@string/Company_Name"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="normal"
    />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/co"
            />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="350dp"
        android:src="@drawable/ma"
            />
    <TextView
        android:id="@+id/addre1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="11dp"
        android:text="@string/address1"
        android:textColor="#000000"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/addre2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addre1"
        android:layout_marginLeft="50dp"
        android:text="@string/address2"
        android:textColor="#000000"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/phon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addre2"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:autoLink="phone"
        android:linksClickable="true"
        android:text="@string/phone"
        android:textColor="#000000"
        android:textColorLink="#000000"
        android:textSize="20dp"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="400dp"
        android:src="@drawable/ph"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="440dp"
        android:src="@drawable/we"
        />
    <TextView
        android:id="@+id/visit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phon"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:autoLink="web"
        android:text="@string/website"
        android:textColor="#000000"
        android:textColorLink="#006699"
        android:textSize="20sp"
        />



</RelativeLayout>
